<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TodoApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/green_200</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.TodoApp" parent="Base.Theme.TodoApp" />

    <style name="CustomTabLayout" parent="Widget.Material3.TabLayout">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>
    
    <style name="BottomSheetDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/fade_bottom_out</item>
    </style>
</resources>